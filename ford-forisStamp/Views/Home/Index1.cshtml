<script type="text/javascript">
    $(function(){
        $(".start").on("click",function(){
            $(".btnsound").attr("src", '/Content/images/soundStop.png');
            $("#showtimelayout").show();
            var time = 60;
            var m = window.setInterval(function () {
                time--;

                $("#showtime").text("… " + time + " …");
                if (time <= 0) {
                    window.clearInterval(m);
                    $("#showtime").text("");
                }
            },1000);
        });
    });

</script>